@model RealestateListViewModel

<div class="container">
    <h1>This is all apartments we have (@Model.CurrentViewName)</h1>

    <div class="d-flex flex-row justify-content-end">

        <div class="dropdown me-2">
            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Filter type
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-controller="Realestate" asp-action="GeneralGrid">General</a></li>
                <li>
                    <a class="dropdown-item active" asp-controller="Realestate" asp-action="ApartmentGrid" aria-current="true">Apartment</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Realestate" asp-action="HouseGrid">House</a>
                </li>
            </ul>
        </div>

        <div class="dropdown">
            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                View as
            </button>

            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item active" asp-action="ApartmentGrid" aria-current="true">Grid</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-action="ApartmentTable">List</a>
                </li>
            </ul>

        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 m-lg-auto">
        @foreach (var realestate in Model.realestates)
        {
            <partial name="_Gridlayout" model="realestate" />
        }
    </div>

    <div class=" d-flex justify-content-end mt-4">
        <a class="btn btn-secondary"
           asp-controller="Realestate"
           asp-action="Create">Register your place here!</a>
    </div>
</div>
