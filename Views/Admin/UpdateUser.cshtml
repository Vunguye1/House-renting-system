@model ApplicationUser

@{
    ViewData["Title"] = "Update user " + Model.FirstName;
}
<div class="container">
    <h3 class="text-center mt-5">@ViewData["Title"]</h3>

    <div class="row">
        <div>
            <!--Add enctype="multipart/form-data" because it is not only plain text but also image file -->
            <form asp-action="UpdateUser" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-floating m-4">
                    <!--add user name field -->
                    <input asp-for="UserName" class="form-control" disabled />
                    <label asp-for="UserName" class="form-label"></label>
                </div>

                <div class="form-floating m-4">
                    <!--add first name field -->
                    <input asp-for="FirstName" class="form-control" />
                    <label asp-for="FirstName" class="form-label"></label>
                </div>

                <div class="form-floating m-4">
                    <!--add last name field -->
                    <input asp-for="LastName" class="form-control" />
                    <label asp-for="LastName" class="form-label"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-floating m-4">
                    <!--add phone number-->
                    <input asp-for="PhoneNumber" class="form-control" />
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!--confirm button-->
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </form>
        </div>
    </div>

</div>

<partial name="_footerdiv" />
