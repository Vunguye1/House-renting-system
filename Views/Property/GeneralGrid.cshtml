@model PropertyListViewModel


<h2>Find a place to live! We have multiple options here, both houses and apartments (@Model.CurrentViewName)</h2>

<a asp-controller="Property" asp-action="ApartmentGrid" class="btn btn-primary">Apartment</a>
<a asp-controller="Property" asp-action="HouseGrid" class="btn btn-primary">House</a>


<div>
    <a class="btn btn-danger" asp-action="GeneralGrid">Grid layout</a>
    <a class="btn btn-danger" asp-action="GeneralTable">Table layout</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var property in Model.properties)
    {
        <partial name="_Gridlayout" model="property" />
    }
</div>
