@model PropertyListViewModel

<h1>This is all apartments we have (@Model.CurrentViewName)</h1>

<a asp-controller="Property" asp-action="ApartmentGrid" class="btn btn-primary">Apartment</a>
<a asp-controller="Property" asp-action="HouseGrid" class="btn btn-primary">House</a>


<div>
    <a class="btn btn-danger" asp-action="ApartmentGrid">Grid layout</a>
    <a class="btn btn-danger" asp-action="ApartmentTable">Table layout</a>
</div>


<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var property in Model.properties)
    {
        <partial name="_Gridlayout" model="property" />
    }
</div>