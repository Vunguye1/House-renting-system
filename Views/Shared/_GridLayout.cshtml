@model Realestate


<div>
    <div class="gridbox card border-0 gridbox box" style="height: 500px">
        <img src="@Model.imageurl" class="card-img-top padding-3" alt="@Model.Name" style="width: 100%; height: 280px; overflow:hidden">
        <div class="card-body">
            <div>
                <div class="d-flex flex-column">
                    <h5 class="card-title">
                        @Model.Name
                    </h5>
                    <a asp-controller="Realestate"
                       asp-action="Details"
                       asp-route-id="@Model.RealestateId" class="stretched-link"></a>
                    <span>
                        <img src="/img/icons/geo-alt-fill.svg" alt="Grid" width="18" height="18"><span>@Model.Location</span>
                    </span>

                    @if (@Model.User != null) // if there is owner --> display it
                    {
                        <span class="mt-2">
                            <img src="/img/icons/person-fill.svg" alt="Grid" width="20" height="20">

                            <span>@Model.User.FirstName @Model.User.LastName</span>
                        </span>
                    }

                    <h5 class="d-flex justify-content-end mt-3">
                        @Model.Price.ToString("N0").Replace(",", " ") NOK/day

                    </h5>
                </div>
            </div>
        </div>
    </div>
</div>
